[Unit]
Description=Telegram bot 'ReminderBot'
After=network.target

[Service]
EnvironmentFile=/etc/environment
WorkingDirectory=/home/reminderbot/ReminderBot/
ExecStart=/home/reminderbot/ReminderBot/my-venv/bin/python3 /home/reminderbot/ReminderBot/bot_app/bot.py --server-in-foreground
ExecReload=/home/reminderbot/ReminderBot/my-venv/bin/python3 /home/reminderbot/ReminderBot/bot_app/bot.py --server-in-foreground
KillMode=process
RestartSec=10
Restart=always

[Install]
WantedBy=multi-user.target